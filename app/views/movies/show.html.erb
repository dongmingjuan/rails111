<div class="col-md-12">
  <div class="movie">
    <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right") %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
           <td><%= @group.title %></td>
           <td><%= @group.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
